{
  "manifest_version": 3,
  "minimum_chrome_version": "100",
  
  "name": "Slowotok",
  "short_name": "Slowotok",
  "author": "perceptron8",
  "description": "slowotok.pl playing bot",
  "homepage_url": "https://github.com/perceptron8/slowotok",
  "version": "0.0.1",
  
  "icons": {
    "48": "img/icon.png"
  },
  
  "action": {
    "default_title": "Slowotok",
    "default_icon": {
      "48": "img/icon.png"
    }
  },
  
  "content_scripts": [{
    "matches": [
      "https://slowotok.pl/play"
    ],
    "js": [
      "js/content.js"
     ]
  }],
  
  "web_accessible_resources": [{
    "matches": [
      "<all_urls>"
    ],
    "resources": [
      "js/embed.js",
      "txt/words.txt"
    ]
   }]
}
