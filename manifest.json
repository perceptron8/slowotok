{
  "manifest_version": 2,
  "minimum_chrome_version": "50",
  
  "name": "Slowotok",
  "short_name": "Slowotok",
  "author": "perceptron8",
  "description": "slowotok.pl playing bot",
  "homepage_url": "https://github.com/perceptron8/slowotok",
  "version": "0.0.1",
  
  "icons": {
    "48": "img/icon.png"
  },
  
  "browser_action": {
    "default_title": "Slowotok",
    "default_icon": {
      "48": "img/icon.png"
    }
  },
  
  "content_scripts": [{
    "matches": ["https://slowotok.pl/play"],
    "js": [
      "js/content.js"
     ]
  }],
  
  "web_accessible_resources": [
  	"js/embed.js",
    "txt/words.txt"
   ]
}
